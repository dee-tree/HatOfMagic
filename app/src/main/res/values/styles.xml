<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:activityOpenEnterAnimation">@anim/to_bottom</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:immersive">true</item>
        <item name="android:isSticky">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuButton">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">@font/showcard_gothic_cyrillic</item>
        <item name="android:textColor">@color/menu_text</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">180dp</item>
        <item name="android:layout_marginEnd">180dp</item>

    </style>

    <style name="TextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFC107</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/showcard_gothic_cyrillic</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:shadowDx">2</item>
    </style>

</resources>
